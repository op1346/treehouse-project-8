extends ../layout

block content
  h1 Library Books
  br
  a.button(href='/books/new') Create New Book
  br

  table
    tr
      th Title
      th Author
      th Genre
      th Year
    each book in books
      tr
        td
          a(href='/books/' + book.id)=book.title
        td= book.author
        td= book.genre
        td= book.year